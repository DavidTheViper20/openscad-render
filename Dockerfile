FROM node:20-bookworm-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends openscad && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY package.json package-lock.json* ./
RUN npm install --omit=dev

COPY server.js ./

ENV NODE_ENV=production
EXPOSE 3000
CMD ["npm","start"]
